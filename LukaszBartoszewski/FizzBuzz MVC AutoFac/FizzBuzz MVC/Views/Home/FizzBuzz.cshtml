<body ng-app="myModule" ng-controller="myController">

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.1/angular.min.js"></script>

    <input type="text" ng-model="Number" placeholder="Put a Number Here" />

    <button ng-click="GetNumber()">Go</button>
    
    
    <div ng-repeat="number in Numbers track by $index">
        ===> {{number}}
    </div>

    <style id="jsbin-css">

    </style>
    <script>

        var myModule = angular.module('myModule', []);

        myModule.controller('myController', function($scope, $http) {

            $scope.GetNumber = function () {

                $http.post('/api/FizzBuzz', $scope.Number).success(function() {
                    $http.get('/api/FizzBuzz', {
                        params: { Number: $scope.Number }
                    })
                    .success(function (data) {
                        $scope.Numbers = data;
                    });
                });
            };
        });

</script>
</body>
</html>
